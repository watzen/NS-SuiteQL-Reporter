{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/typescript"
    ],
    "plugins": [
        "@typescript-eslint",
        "import",
        "suitescript"
    ],
    "env": {
        "amd": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "modules": true
        }
    },
    "settings": {
        "import/core-modules": [
            "N/currentRecord",
            "N/email",
            "N/error",
            "N/file",
            "N/format",
            "N/http",
            "N/https",
            "N/log",
            "N/query",
            "N/record",
            "N/redirect",
            "N/render",
            "N/runtime",
            "N/search",
            "N/task",
            "N/types",
            "N/ui/dialog",
            "N/ui/message",
            "N/ui/serverWidget",
            "N/url",
            "N/util",
            "N/workflow",
            "N/encode",
            "N/action"
        ],
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".ts",
                    ".d.ts"
                ]
            }
        }
    },
    "rules": {
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/no-empty-interface": [
            "error",
            {
                "allowSingleExtends": true
            }
        ],
        "suitescript/script-type": "error",
        "suitescript/no-log-module": "off",
        "suitescript/log-args": "off",
        "suitescript/entry-points": "warn",
        "suitescript/module-vars": "off",
        "suitescript/no-amd-name": "off",
        "suitescript/no-extra-modules": "off",
        "suitescript/no-invalid-modules": "off",
        "no-prototype-builtins": "off",
        "no-unused-vars": "off",
        "no-trailing-spaces": "error",
        "prefer-exponentiation-operator": "warn",
        "@typescript-eslint/ban-ts-comment": "warn",
        "@typescript-eslint/ban-types": "warn",
        "import/no-unresolved": "error",
        "import/named": "error",
        "import/namespace": "error",
        "import/default": "error",
        "import/export": "error",
        "import/no-named-as-default": "warn",
        "import/no-named-as-default-member": "warn",
        "import/no-duplicates": "warn",
        "arrow-spacing": "error",
        "block-spacing": "error",
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "curly": [
            "error",
            "all"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "eqeqeq": [
            "error",
            "always",
            {
                "null": "ignore"
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxBOF": 1,
                "maxEOF": 1
            }
        ],
        "no-else-return": "error",
        "no-negated-condition": "warn",
        "no-this-before-super": "error",
        "no-unneeded-ternary": "error",
        "no-useless-concat": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            2,
            "never"
        ],
        "import/order": [
            "error",
            {
                "pathGroups": [
                    {
                        "pattern": "N/**/*",
                        "group": "external"
                    }
                ],
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": false
                },
                "groups": [
                    "builtin",
                    "external",
                    "parent",
                    "index",
                    "internal",
                    "sibling",
                    "object"
                ]
            }
        ],
        "max-params": [
            "error",
            2
        ],
        "comma-dangle": [
            "error", {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "always-multiline"
            }
        ]
    },
    "overrides": []
}
